{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                //"-g",
                //"-mwindows",
                "${workspaceFolder}\\*.cpp",
                "${workspaceFolder}\\Imgui\\*.cpp",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}\\Imgui",
                "-IE:\\ThirdPardLib\\asio-1.30.2\\include",
                "-D_WIN32_WINNT=0x0601",
                "-DASIO_STANDALONE",
                "-DUNICODE",
                "-D_UNICODE",
                "-fexec-charset=UTF-8",
                "-finput-charset=UTF-8",
                "-ld3d11",
                "-ldxgi",
                "-lole32",
                "-luuid",
                "-ld3dcompiler",
                "-ldwmapi",
                "-lgdi32",
                "-lws2_32",
                "-lmswsock",
                "-flto", //https://blog.csdn.net/lfod1997/article/details/108970045
                //"-O0", //使用-O0选项在开发阶段禁用优化，以减少编译时间。优化选项（如-O2或-O3）会增加编译时间。
                "-o",
                "${workspaceFolder}\\build\\Server.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: C:\\mingw64\\bin\\g++.exe"
        }
    ],
    "version": "2.0.0"
}